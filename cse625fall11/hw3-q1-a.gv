digraph finite_state_machine {
	rankdir=LR;
	node [color = white]; start;
	node [color = black, shape = doublecircle]; 1;
	node [color = black, shape = circle];
	start -> 0;
	0 -> 1 [ label = "1" ];
	0 -> 2 [ label = "0" ];
	1 -> 1 [ label = "0,1" ];
	2 -> 0 [ label = "1" ];
	2 -> 1 [ label = "0" ];
}
